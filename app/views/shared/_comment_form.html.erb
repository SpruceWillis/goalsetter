<h2>Comments</h2>

<% comments.each do |comment| %>
  <label><%= comment.body %> | <%= link_to "remove", comment_url(comment), method: :delete %></label>
  <br>
<% end %>

<h3>New Comment</h3>
<form class="" action="<%= action %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <textarea name="comment[body]" rows="8" cols="40" placeholder="witty comment here"></textarea> <br>

  <input type="submit" name="" value="Add Comment">
</form>
